<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="template" client="site">
    <name>lavelin_bs</name>
    <creationDate>2017-02-09</creationDate>
    <author>les</author>
    <authorEmail>web@lavelin.ru</authorEmail>
    <authorUrl>http://www.lavelin.ru</authorUrl>
    <copyright>2016 Lavelin.ru. All Rights Reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <version>1.0.0</version>
    <description>TPL_LAVELIN_BS_XML_DESCRIPTION</description>

    <files>
        <folder>css</folder>
        <folder>fonts</folder>		
        <folder>html</folder>		
        <folder>images</folder>
        <folder>js</folder>
        <folder>language</folder>
        <filename>index.php</filename>
        <filename>index.html</filename>
        <filename>templateDetails.xml</filename>
    </files>

    <positions>
    	<position>navigation</position>
		<position>banner</position>
		<position>breadcrumbs</position>
		<position>left</position>
		<position>bottom-1</position>
		<position>bottom-2</position>
		<position>bottom-3</position>
		<position>footer</position>
		<position>debug</position>
    </positions>

    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.tpl_lavelin_bs.ini</language>
        <language tag="en-GB">en-GB/en-GB.tpl_lavelin_bs.sys.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.tpl_lavelin_bs.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.tpl_lavelin_bs.sys.ini</language>
    </languages>
	
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="linkColor" type="color" default="#fff"
						label="TPL_LAVELIN_BS_MENU_LINK_COLOR"
						description="TPL_LAVELIN_BS_MENU_LINK_COLOR_DESC" />				
				<field name="logotypeImage" 
						type="media" 
						label="TPL_LAVELIN_BS_LOGO_IMAGE" 
						description="TPL_LAVELIN_BS_LOGO_IMAGE_DESC"/>
				<field name="templateStyle" 
						type="list" 
						default="0" 
						label="TPL_LAVELIN_BS_TEMPLATE_STYLE" 
						description="TPL_LAVELIN_BS_TEMPLATE_STYLE_DESC">
					  <option value="0">Purple</option>
					  <option value="1">Green</option>
				</field>						
			</fieldset>
		</fields>
	</config>
</extension>